        <link rel="stylesheet" type="text/css" href="{{ preload(asset('css/vendors.css'), { as: 'style' }) }}">
        <link rel="stylesheet" type="text/css" href="{{ preload(asset('css/app.css'), { as: 'style' }) }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body class="d-flex flex-column">
        {# Si l'utilisateur est connect√© #}
        {{ include('component/menu.html.twig') }}

    <div id="page-content">
        <div class="container">
            {% block body %}{% endblock %}

            <div id="modals"></div>

            <!-- Modal -->
            <div class="modal fade" id="modal-prototype" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg multipleModal" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body"></div>
                        <div class="modal-footer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer id="sticky-footer" class="py-4 bg-dark text-white-50">
        <hr>
        <div class="container text-center">
            <small>The sky's the limit &copy; {{ 'now'|date('Y') }} and beyond.</small>
        </div>
    </footer>
    {% block javascripts %}
        <script src="{{ preload(asset('js/app.js'), { as: 'script' }) }}"></script>
        <script src="{{ preload(asset('js/vendors.js'), { as: 'script' }) }}"></script>
        <script src="{{ preload(asset('bundles/fosjsrouting/js/router.min.js'), { as: 'script' }) }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        <script>require('assets/js/app/script.js');</script>
        <script>require('assets/js/app/main.js');</script>
    {% endblock %}

</body>
</html>
