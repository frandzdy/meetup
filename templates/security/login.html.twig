{% extends 'layout.html.twig' %}
{% trans_default_domain 'message' %}

{% block title %}
    Login - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex">
                    <!-- Background image for card set in CSS! -->
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Connectez-vous</h5>
                    <form method="post" class="form-signin">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="inputUsername">Nom d'utilisateur</label>
                            <input type="text" value="{{ last_username }}" placeholder="Nom d'utilisateur" name="username" id="inputUsername"
                                   class="form-control" required
                                   autofocus>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <div class="checkbox col-sm-12">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de ma session
                                </label>
                            </div>
                        </div>
                        <a class="d-block text-center mt-2 small" href="{{ path('front_create_person') }}">Pas encore de compte ?</a>
                        <a class="d-block text-center mt-2 small" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">
                            {{ 'Se connecter'|trans }}
                        </button>
                        <hr class="my-4">
{#                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i#}
{#                                    class="fab fa-google mr-2"></i> Sign up with Google#}
{#                        </button>#}
{#                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i#}
{#                                    class="fab fa-facebook-f mr-2"></i> Sign up with Facebook#}
{#                        </button>#}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
